extends layout 

block content
  div(class='nav')
    h4(class='logo nav-content' ) 
      a(href='/') MEMBERS ONLY

    div(class='nav-user nav-content')
      if user
        a(href='/message') submit a message
        if !user.member
          a(href='/member') become member
        if !user.admin
          a(href='/admin') become admin
        p=user.username
        a(href='logout') logout
      else
        a(href='/signup') signup
        a(href='/login') login

  if user
    form(id='form-member' method='POST')
      label(for='passcode') Speak friend and enter 
      input(name='passcode' type='text')
      button(type='submit') Enter
  else
    p please log in

  if errors
    ul
      for error in errors
        li= error.msg
  